{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "lib": [
      "DOM",
      "ES6"
    ],
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strict": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "webpack.config.js",
    "webpack.dev.config.js",
    "webpack.prod.config.js"
  ]
}
